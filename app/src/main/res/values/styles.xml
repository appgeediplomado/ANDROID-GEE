<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTextAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <!--cursor y línea normal-->
        <item name="colorControlNormal">@color/colorTextPrimary</item>
        <!--cursor y línea con foco-->
        <item name="colorControlActivated">@color/colorTextAccent</item>
    </style>

</resources>
